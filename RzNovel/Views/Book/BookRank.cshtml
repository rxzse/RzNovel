@using RzNovel.DTO.Resp;

@{
    var listRankBooks = (List<BookRankRespDto>)ViewBag.BookRanks;
    var indexCount = 1;
}
<div class="row justify-content-center">
    <div class="col-8">
        <div class="card">
            <div class="card-header sticky-top" style="background: #1e293b">
                <div>
                    <h3 class="card-title">
                        @ViewData["Title"]
                    </h3>
                    <p class="card-subtitle">
                        Bảng xếp hạng
                    </p>
                </div>
            </div>
            <div class="card-body">
                <div class="divide-y">


                    @foreach (var br in listRankBooks)
                    {
                        <div>
                            <div class="row">
                                <div class="col-auto">
                                    <span class="avatar">@(indexCount++)</span>
                                </div>
                                <div class="col">
                                    <div class="text-truncate">
                                        <a href="/book/details/@br.id"><strong>@br.bookName</strong></a>
                                    </div>
                                    <div class="text-muted" name="timeAgo">@br.lastChapterUpdateTime</div>
                                </div>
                                @if (indexCount <= 4)
                                {
                                    <div class="col-auto align-self-center">
                                        <div class="badge bg-primary"></div>
                                    </div>
                                }

                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>